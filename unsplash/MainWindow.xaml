<Window x:Class="unsplash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="550" Width="785">
    <Grid>
        <Canvas Name="Canvas_ButtonGroup">
            <Button Tag="GetBuildings" Content="Buildings" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Tag="GetFoodAndDrink" Content="Food/Drink" HorizontalAlignment="Left" Margin="100,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Tag="GetNature" Content="Nature" HorizontalAlignment="Left" Margin="190,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Tag="GetObjects" Content="Objects" HorizontalAlignment="Left" Margin="280,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Tag="GetPeople" Content="People" HorizontalAlignment="Left" Margin="370,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Tag="GetTechnology" Content="Technology" HorizontalAlignment="Left" Margin="460,10,0,0" VerticalAlignment="Top" Width="75"/>
        </Canvas>
        <ScrollViewer Margin="0,37,0,0">
            <WrapPanel Name="WrapPanelImages">
            </WrapPanel>
        </ScrollViewer>
        <ProgressBar Name="ProgressBarStatus" Visibility="Hidden" IsIndeterminate="True" Margin="0,10,10,0" HorizontalAlignment="Right" Width="186" Height="14" VerticalAlignment="Top"/>
    </Grid>
</Window>
